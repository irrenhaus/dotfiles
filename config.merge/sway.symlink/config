# Firefox sharing indicator
for_window [title=".*Sharing Indicator.*"] floating enable

# Show XWayland marker in title
for_window [shell="xwayland"] title_format "%title [XWayland]"


# Firefox desktop notification windows
no_focus [app_id="firefox" title="^$"]
for_window [app_id="firefox" title="^$"] border none, floating enable, move position 79 ppt 4 ppt


# Idle inhibition
# Zoom
for_window [title="Zoom Meeting"] inhibit_idle open
# Any fullscreen window
for_window [class="^.*"] inhibit_idle fullscreen
for_window [app_id="^.*"] inhibit_idle fullscreen

# gaps
for_window [class="^.*"] border pixel 2
gaps inner 5
gaps outer 5
smart_gaps on
smart_borders on

# Display stuff (e.g. for flameshot)
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP=sway

# Autostart

# Clipboard manager
exec wl-paste -t text --watch clipman store

# NetworkManager
exec nm-applet --indicator

exec gammastep

exec_always ~/.config/sway/import-gsettings

# Create socket for wayland overlay bar
exec env WOBSOCK=$WOBSOCK ~/.config/sway/wob

# exec ~/.config/sway/sworkstyle

